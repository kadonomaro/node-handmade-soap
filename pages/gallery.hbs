<body class="page gallery-page">
    <div class="all-wrapper">

        {{> blocks/scroll-top }}

        <header class="page-header page-header--gallery">
            <div class="page-header__background background"></div>
            <div class="page-header__nav">
                {{> navigation}}
            </div>
            <h1 class="page-header__title">Галерея работ</h1>
            <span class="page-header__subtitle">Handmade soap</span>

            <div class="photo-cards">
                <ul class="photo-cards__list">
                    <li class="photo-cards__item">
                        <div class="photo-cards__image">
                            <img src="./assets/images/gallery/photo-7.jpg" alt="">
                        </div>
                        <span class="photo-cards__caption">Выбери</span>
                    </li>
                    <li class="photo-cards__item">
                        <div class="photo-cards__image">
                            <img src="./assets/images/gallery/photo-2.jpg" alt="">
                        </div>
                        <span class="photo-cards__caption">свой</span>
                    </li>
                    <li class="photo-cards__item">
                        <div class="photo-cards__image">
                            <img src="./assets/images/gallery/photo-6.jpg" alt="">
